{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Base Agent Output",
  "description": "Common output fields required from every agent",
  "type": "object",
  "required": ["decision_summary", "next_actions", "escalation_required", "audit_events"],
  "properties": {
    "decision_summary": {
      "type": "string",
      "minLength": 1,
      "description": "1-3 sentence summary of what was decided"
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "owner"],
        "properties": {
          "action": { "type": "string" },
          "owner": { "type": "string" }
        }
      }
    },
    "escalation_required": {
      "type": "boolean"
    },
    "escalation_reason": {
      "type": "string"
    },
    "audit_events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "detail"],
        "properties": {
          "type": { "type": "string" },
          "detail": { "type": "string" },
          "timestamp": { "type": "string" }
        }
      }
    }
  }
}
